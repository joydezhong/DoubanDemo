<!--登录注册对话框模板-->
<div>
    <link rel="stylesheet" href="../stylesheets/dialog.css" />
    <!--login-->
    <div class="login-dialog mdui-dialog" id="login-modal">
        <button class="mdui-btn mdui-btn-icon mdui-text-color-white" mdui-dialog-close><i class="mdui-icon material-icons">close</i></button>
        <div class="mdui-dialog-title mdui-color-indigo">登录</div>
        <form>
            <div class="mdui-textfield mdui-textfield-floating-label mdui-textfield-has-bottom mdui-textfield-invalid-html5">
                <label class="mdui-textfield-label">用户名或邮箱</label>
                <input class="mdui-textfield-input" name="name" type="text" required="">
                <div class="mdui-textfield-error">账号不能为空</div>
            </div>
            <div class="mdui-textfield mdui-textfield-floating-label mdui-textfield-has-bottom">
                <label class="mdui-textfield-label">密码</label>
                <input class="mdui-textfield-input" name="password" type="password" required="">
                <div class="mdui-textfield-error">密码不能为空</div>
            </div>
            <div class="actions mdui-clearfix">
                <button class="mdui-btn mdui-ripple more-option" type="button" mdui-menu="{target: '#mc-login-menu', position: 'top', covered: true}">更多选项</button>
                <ul class="mdui-menu" id="mc-login-menu">
                    <!--<li class="mdui-menu-item">-->
                        <!--<a class="mdui-ripple mc-password-reset-trigger">忘记密码</a>-->
                    <!--</li>-->
                    <li class="mdui-menu-item mc-register"><a class="mdui-ripple mc-register-trigger" mdui-dialog="{target:'#register-modal', modal: true}">创建新账号</a></li>
                </ul>
                <button type="submit" class="mdui-btn mdui-btn-raised mdui-color-theme-accent mdui-float-right">登录</button>
            </div>
        </form>
    </div>
    <!--login end-->

    <!--register-->
    <div class="register-dialog mdui-dialog" id="register-modal">
        <button class="mdui-btn mdui-btn-icon mdui-text-color-white" mdui-dialog-close><i class="mdui-icon material-icons">close</i></button>
        <div class="mdui-dialog-title mdui-color-indigo">注册</div>
        <form>
            <div class="mdui-textfield mdui-textfield-floating-label mdui-textfield-has-bottom mdui-textfield-invalid-html5">
                <label class="mdui-textfield-label">用户名或邮箱</label>
                <input class="mdui-textfield-input" name="name" type="text" required="">
                <div class="mdui-textfield-error">账号不能为空</div>
            </div>
            <div class="mdui-textfield mdui-textfield-floating-label mdui-textfield-has-bottom">
                <label class="mdui-textfield-label">密码</label>
                <input class="mdui-textfield-input" name="password" type="password" required="">
                <div class="mdui-textfield-error">密码不能为空</div>
            </div>
            <div class="actions mdui-clearfix">
                <div class="actions">
                    <div class="mdui-btn mdui-ripple more-option mc-login-trigger" mdui-dialog="{target:'#login-modal', modal: true}">已有账号？</div>
                    <button type="submit" class="mdui-btn mdui-btn-raised mdui-float-right btn-register">注册</button>
                </div>
            </div>
        </form>
    </div>
    <!--register end-->

    <!--tips dialog-->

    <!--tips dialog end-->


    <script type="text/javascript" src="../javascripts/dialog.js"></script>
</div>